{
  "name": "vs-alda",
  "displayName": "vs-alda",
  "description": "VS Code Extension for Alda Music",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:alda",
    "onCommand:alda.playSelection"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "alda",
        "aliases": [
          "Alda"
        ],
        "extensions": [
          ".alda"
        ]
      }
    ],
    "commands": [
      {
        "command": "vs-alda.playSelection",
        "title": "Alda: Play Selection"
      },
      {
        "command": "vs-alda.exportSelectionToMidi",
        "title": "Alda: Export Selection to MIDI"
      },
      {
        "command": "vs-alda.stop",
        "title": "Alda: Stop"
      }
    ],
    "keybindings": [
      {
        "command": "vs-alda.playSelection",
        "key": "alt+p",
        "when": "editorTextFocus && editorLangId == alda"
      },
      {
        "command": "vs-alda.exportSelectionToMidi",
        "key": "alt+shift+e",
        "when": "editorTextFocus && editorLangId == alda"
      },
      {
        "command": "vs-alda.stop",
        "key": "alt+s",
        "when": "editorTextFocus && editorLangId == alda"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "esbuild": "^0.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
